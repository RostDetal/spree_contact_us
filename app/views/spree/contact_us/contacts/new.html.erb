<% content_for :head do -%>
  <meta name="title" content="<%= Spree.t(:contact_us_title) %>">
<% end -%>

<% content_for :sidebar do 
   if "products" == @current_controller && @taxon %>
    <%= render :partial => "spree/shared/filters" %>
  <% else %>
    <%= render :partial => "spree/shared/taxonomies" %>
  <% end
 end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @contact } %>

<span class="static-page-title without-selection"><%= Spree.t(:contact_us_title) %></span>

<%= form_for @contact, :url => contacts_path, :html => { :novalidate => '' } do |f| %>

  <% if SpreeContactUs.require_name %>
    <div style="display: block; width: 100%;">
      <!--<%= f.label :name %>-->
      <% user_name = site_current_user_name%>
      <span class="required without-selection" style="position: absolute; right: 25px; margin-top:10px;">*</span>
      <%= f.text_field :name, :placeholder=>Spree.t("activemodel.attributes.contact_us/contact.name"), :value=>user_name, class: 'required text_field_decoration', :style=>'font-size: 1.3em;' %>
    </div>
  <% end %>

  <p>
    <%user_mail = site_current_user_email%>
    <span class="required without-selection" style="position: absolute; right: 25px; margin-top:10px;">*</span>
    <%= f.email_field :email, :placeholder=>Spree.t("activemodel.attributes.contact_us/contact.email"), :value=>user_mail, class: 'required email text_field_decoration', :style=>'font-size: 1.3em;' %>
  </p>

  <!--Требуется тема-->
  <% if SpreeContactUs.require_subject %>
      <span class="required without-selection" style="position: absolute; right: 25px; margin-top:10px;">*</span>
      <%= f.text_field :subject, :placeholder=>Spree.t("activemodel.attributes.contact_us/contact.subject"), class: 'required text_field_decoration', :style=>'font-size: 1.3em;' %>
  <% end %>

  <span class="required without-selection" style="position: absolute; right: 25px; margin-top:10px;">*</span>
  <%= f.text_area :message, :placeholder=>Spree.t("activemodel.attributes.contact_us/contact.message"), class: 'required', :style=>'font-size: 1.3em; width:100%; height:200px;' %>


  <div class="review-submit-block" style="margin-top:15px">
    <%= f.submit Spree.t(:submit), :alt => Spree.t(:submit), :id => 'contact_us_contact_submit', :class=>'review-submit-button', :style=>'float:none; border-radius: 5px;font-size:1.1em; width:200px; margin:auto; text-transform:uppercase;',:title => Spree.t(:submit) %>
  </div>
<% end %>
